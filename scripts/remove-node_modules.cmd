@echo off

SET ProjectDir=%~dp0..

for %%x in (
        package-lock.json
        yarn-error.log
       ) do (
        call :removefile %%x
       )

for %%x in (
        node_modules
        packages\components\node_modules
        packages\rns-core\node_modules
        packages\rns-theme\node_modules
        packages\rns-mobile-app\node_modules
        packages\rns-web-app\node_modules
       ) do (
        call :removefolder %%x
       )

exit 0

:removefile
del /q "%ProjectDir%\%1"
exit /b

:removefolder
rmdir /s /q "%ProjectDir%\%1"
exit /b
