{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "metro.config.js", "rn-cli.config.js"],
  "references": [
    {
      "path": "../components"
    },
    {
      "path": "../rns-core"
    },
    {
      "path": "../rns-theme"
    }
  ]
}
