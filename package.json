{
  "name": "react-native-shop",
  "version": "0.1.2",
  "description": "React native playground packages",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-svg",
      "**/react-native-svg/**"
    ]
  },
  "scripts": {
    "postinstall": "npm-link-shared .\\node_modules .\\packages\\rns-mobile-app\\node_modules react --yarn",
    "compile": "tsc -b --incremental",
    "android": "yarn workspace rns-mobile-app android",
    "android-gradle-clean": "yarn workspace rns-mobile-app android-gradle-clean",
    "android-reset-metro-cache": "yarn workspace rns-mobile-app android-reset-metro-cache",
    "react-native-start": "yarn workspace rns-mobile-app start",
    "remotedev": "remotedev --hostname=localhost --port=8888"
  },
  "dependencies": {},
  "devDependencies": {
    "prettier": "^1.17.0",
    "remotedev-server": "^0.3.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "tslint-react-hooks": "^2.2.1",
    "typescript": "^3.8.3"
  },
  "bugs": {
    "url": "https://github.com/KEMBL/react-native-shop/issues"
  },
  "homepage": "https://github.com/KEMBL/react-native-shop",
  "keywords": [
    "react",
    "react-native",
    "monorepo",
    "workspaces"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/KEMBL/react-native-shop.git"
  }
}